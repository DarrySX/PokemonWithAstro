---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { 
  class: className = '',
  size = 'lg'
} = Astro.props;

const sizeClasses = {
  sm: 'text-2xl md:text-3xl',
  md: 'text-3xl md:text-4xl',
  lg: 'text-4xl md:text-5xl',
  xl: 'text-5xl md:text-6xl lg:text-7xl'
};
---

<div class="mb-8">
  <h1 
    class={`
      font-bold text-gray-900 dark:text-white
      ${sizeClasses[size]}
      ${className}
      mb-4 animate-fade-in
    `}
  >
    <slot />
  </h1>
  
  <div class="h-1 w-20 bg-gradient-to-r from-primary-600 to-purple-600 rounded-full dark:from-primary-400 dark:to-purple-400"></div>
</div>
